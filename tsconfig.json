{
  "compilerOptions": {
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist/out-tsc",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6" , "dom"
    ],
    "exclude": [
      "node_modules"
    ]
  }
}